<%- include ("../partials/header") %>
    <div class="container">
        <div class="row align-items-center">
            <h1 class="col-11 h4"><%= singleTrans.name %> (<%= singleTrans.symbol %>)</h1>
            <form method="POST" action="/stockCafe/<%= singleTrans.id %>?_method=DELETE" class="col-1">
                <div class="mt-3">
                <input type="submit" class="btn btn-danger mb-3" value="Delete" />
                </div>
            </form>
        </div>
        <div class="row">
            <form method="POST" action="/stockCafe/<%= singleTrans._id %>?_method=PUT" class="validated-form needs-validation" novalidate>
                <div class="col">
                    <label for="action" class="form-label">Action</label>
                    <br>
                    <div class="form-check form-check-inline">
                        <% if (singleTrans.action === 'buy') { %>
                            <input class="form-check-input" type="radio" name="action" id="buy" value="buy" required checked>
                            <label class="form-check-label" for="buy">Buy</label>
                        <% } else { %> 
                            <input class="form-check-input" type="radio" name="action" id="buy" value="buy" required>
                            <label class="form-check-label" for="buy">Buy</label>
                        <% } %>
                    </div>
                    <div class="form-check form-check-inline">
                        <% if (singleTrans.action === 'sell') { %>
                            <input class="form-check-input" type="radio" name="action" id="sell" value="sell" required checked>
                            <label class="form-check-label" for="sell">Sell</label>
                        <% } else { %> 
                            <input class="form-check-input" type="radio" name="action" id="sell" value="sell" required>
                            <label class="form-check-label" for="sell">Sell</label>
                        <% } %>
                    </div>
                </div>
                <div class="col">
                    <label for="date" class="form-label">Date</label>
                    <input type="date" class="form-control" name="date" value="<%= date %>" required>
                </div>
                <div class="col">
                    <label for="units" class="form-label">Units</label>
                    <input type="number" class="form-control" name="units" value="<%= singleTrans.units %>" required>
                </div>
                <div class="col">
                    <label for="price" class="form-label">Price</label>
                    <input type="text" class="form-control" name="price" value="<%= singleTrans.price %>" required>
                </div>
                <div class="col mt-3">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>

    
<%- include ("../partials/footer") %>
